<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/met_email"
        android:background="@drawable/gray_rounded"
        android:hint="Phone number, email or username"
        android:text=""

        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/met_password"
        android:hint="Password"
        />

    <LinearLayout
        android:layout_marginTop="9dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_height="wrap_content"
            android:text="Login as"/>

        <Spinner
            android:id="@+id/sp_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_white_rounded">

        </Spinner>


    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:textColor="@color/blueRound"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_white_rounded"
        android:textAllCaps="false"
        android:text="Log In"

        />

</LinearLayout>