<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:orientation="vertical"
    tools:context=".activity.ScheduleAddActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:padding="9dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DRIVER"/>

            <Spinner
                android:layout_marginTop="15dp"
                android:background="@drawable/blue_white_rounded"
                android:layout_width="match_parent"
                android:hint="ID Driver"

                android:id="@+id/sp_driver_id"
                android:layout_height="41dp" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:hint="Driver Name"
                app:met_floatingLabel="highlight"
                android:id="@+id/tv_driver_name"
                android:enabled="false"
                android:layout_height="wrap_content" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:hint="Phone"
                android:id="@+id/tv_driver_phone"
                android:clickable="false"
                android:enabled="false"
                app:met_floatingLabel="highlight"
                android:layout_height="wrap_content" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:hint="Email"
                android:enabled="false"
                android:clickable="false"
                android:id="@+id/tv_driver_email"
                app:met_floatingLabel="highlight"
                android:layout_height="wrap_content" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:hint="Car"
                android:enabled="false"
                app:met_floatingLabel="highlight"
                android:id="@+id/tv_driver_car"
                android:layout_height="wrap_content" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:hint="Police Number"
                android:enabled="false"
                android:id="@+id/tv_driver_police_number"
                app:met_floatingLabel="highlight"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:id="@+id/btnSave"
                android:textColor="@android:color/white"
                android:background="@color/colorGreen"
                />

        </LinearLayout>


    </ScrollView>




</LinearLayout>